			    <RelativeLayout
			        android:id="@+id/rlyGuardar"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/rlyAgregarFotosContenidoDesplegable"
			        android:layout_marginTop="10dp"
			        android:clickable="true"
			        android:onClick="btnCalificarOferta_click" >
	
			        <ImageView
			            android:id="@+id/imgGuardarInfo"
				        android:layout_gravity="top"
				       	android:layout_height="25sp"
				       	android:layout_width="fill_parent"
				       	android:adjustViewBounds="false"
				       	android:layout_marginLeft="40dp"
				       	android:layout_alignWithParentIfMissing="true"
				       	android:scaleType="fitXY"
				       	android:contentDescription="@string/lbl_textoiniciosesion" />
			    
			    
			    <!-- Guardar -->
			    
			    <TextView
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
					android:gravity="center_horizontal"
					android:layout_centerVertical="true"
			        android:textColor="#ffffff"
			        android:textSize="14sp"
			        android:layout_marginRight="0dp"
			        android:layout_marginTop="2dp"
			        android:textStyle="bold"
			        android:text="@string/txtGuardar"
			        android:singleLine="true"
			   		android:ellipsize="end" />
			    
			    </RelativeLayout>
			 </RelativeLayout>
		 
	    </ScrollView>
	    
	    </LinearLayout>
	        
</FrameLayout>
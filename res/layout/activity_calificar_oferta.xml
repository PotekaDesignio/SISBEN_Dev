<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

	    <RelativeLayout 
	        android:layout_gravity="top"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp" >
	        
	    	<ImageView 
	        	android:layout_gravity="top"
	        	android:layout_height="fill_parent"
	        	android:layout_width="fill_parent"
	        	android:src="@drawable/barra_top"
	        	android:adjustViewBounds="false"
	        	android:scaleType="fitXY"
	        	android:contentDescription="@string/lbl_textoiniciosesion"/>
	    	<TextView
		        android:id="@+id/txtTituloView"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
				android:gravity="right"
		        android:textColor="#ffffff"
		        android:textSize="16sp"
		        android:layout_centerVertical="true"
		        android:layout_marginRight="5dp"
		        android:layout_marginTop="0dp"
		        android:textStyle="bold"
		        android:text="@string/txtTituloCalificacionOferta"
		        android:singleLine="true"
		   		android:ellipsize="end" />
	    	
	    </RelativeLayout>
	    
	    <ScrollView
			     android:layout_width="fill_parent"
			     android:layout_height="fill_parent">
		        
		    <RelativeLayout
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:paddingTop="5dip"
			    android:paddingRight="0dip"
			    android:paddingBottom="5dip"
			    android:paddingLeft="0dip"
			    android:id="@+id/rlyItem" >
			    
		        <RelativeLayout 
		            android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:id="@+id/rlyEncabezadoDimension">
		            
		            <!--  fondo Dimension -->
			    
			    <ImageView
			        android:id="@+id/imgFondoDetalleDimension" 
			        android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			        android:layout_marginLeft="30dp"
			        android:contentDescription="@string/contentDescriptionImagenes"   />
			    
			    <!--  fondo Encabezado Dimension -->
			    
			    <ImageView
			        android:id="@+id/imgFondoDimension" 
			      	android:layout_gravity="top"
			       	android:layout_height="wrap_content"
			       	android:layout_width="fill_parent"
			       	android:adjustViewBounds="false"
			       	android:layout_alignWithParentIfMissing="true"
			       	android:scaleType="fitXY"
			       	android:contentDescription="@string/lbl_textoiniciosesion"
			       	android:layout_marginLeft="25dp"
			     />
			    
			    <!--  Pictograma Dimension -->
			    <LinearLayout android:id="@+id/thumbnail"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:padding="0dip"
			        android:layout_alignParentLeft="true"
			        android:layout_marginRight="0dip">
			 
			        <ImageView
			            android:id="@+id/imgDimension"
			            android:layout_width="60dip"
			            android:layout_height="wrap_content"
			            android:scaleType="fitXY"
			            android:adjustViewBounds="true"
			            android:contentDescription="@string/contentDescriptionImagenes"/>
			 
			    </LinearLayout>
			 
			    <!-- Nombre Dimension-->
			    <TextView
			        android:id="@+id/txtTitulo"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_toRightOf="@+id/thumbnail"
					android:gravity="top"
			        android:textColor="#ffffff"
			        android:textSize="14sp"
			        android:layout_marginRight="0dp"
			        android:layout_marginTop="2dp"
			        android:textStyle="bold"
			        android:text="@string/txtTextoPrincipal"
			        android:singleLine="true"
			   		android:ellipsize="end" />
			 
			    <!-- Texto de detalle -->
			    <TextView
			        android:id="@+id/txtSubTitulo"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:textSize="12sp"
			        android:layout_marginTop="0dp"
			        android:gravity="bottom"
			        android:layout_below="@+id/txtTitulo"
			        android:layout_toRightOf="@+id/thumbnail"
			        android:layout_centerVertical="true"
			        android:textColor="#FAFAFA"
			        android:text="@string/txtTextoPrincipalDetalle"
			        android:singleLine="true"
			   		android:ellipsize="end" />
		            
		        </RelativeLayout>
		        
		        <!-- dkljfskdjfhskljdfhskjdfhskjdhfsñlkjdfhlsjdfhlsjdflsjdfhlskjdflskjdfhlsjdflskdjfhlskdjflskjdfhlskjdfhlskdjh -->
			    
			    <RelativeLayout
			        android:id="@+id/rlyDetalleEncabezado"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="60dp">
	
			        <ImageView
			            android:id="@+id/imgFondoEncabezadoDescripcion"
			            android:layout_width="fill_parent"
			            android:layout_height="55sp"
			            android:layout_gravity="top"
			            android:layout_marginLeft="40dp"
			            android:adjustViewBounds="false"
			            android:contentDescription="@string/lbl_textoiniciosesion"
			            android:scaleType="fitXY"/>
			    
			    <!-- Nombre Dimension-->
			    <TextView
			        android:id="@+id/txtTextoSuperiorOferta"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:textSize="12sp"
			        android:gravity="right"
			        android:layout_marginRight="10dp"
			        android:textColor="#ffffff"
			        android:text="@string/txtOrigenANSPE_Oferente_TipoOferta"
			        android:singleLine="true"
			   		android:ellipsize="end" />
			    
			    <TextView
			        android:id="@+id/txtDescripcionOferta"
			        android:layout_below="@+id/txtTextoSuperiorOferta"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
					android:gravity="right"
					android:layout_marginRight="10dp"
					android:layout_marginLeft="20dp"
					android:layout_centerVertical="true"
			        android:textColor="#ffffff"
			        android:textSize="14sp"
			        android:textStyle="bold"
			        android:text="@string/txtNombreCortoOferta"
			        android:singleLine="false"
			   		android:ellipsize="end" />
	
	   		    <TextView
	   		        android:id="@+id/txtLogrosOferta"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:textSize="12sp"
			        android:gravity="right"
			        android:layout_marginRight="10dp"
			        android:textColor="#ffffff"
			        android:text="@string/txtLogrosOferta"
			        android:singleLine="true"
			        android:layout_below="@+id/txtDescripcionOferta"
			   		android:ellipsize="end" />
			    
			    
			    </RelativeLayout>
			    
			    <!-- 78979879879879879879879879879879879879879879879879879879879879879879879879879879879879879879879 -->
			    
			    <RelativeLayout
			        android:id="@+id/rlyInfoEvento"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/rlyDetalleEncabezado"
			        android:layout_marginTop="10dp" 
			        android:clickable="true"
			        android:onClick="MostrarOcultar"
			        android:tag="rlyInfoEvento" >
	
			         <ImageView
			            android:id="@+id/imgInfoEvento"
				        android:layout_gravity="top"
				       	android:layout_height="25sp"
				       	android:layout_width="fill_parent"
				       	android:adjustViewBounds="false"
				       	android:layout_marginLeft="40dp"
				       	android:layout_alignWithParentIfMissing="true"
				       	android:scaleType="fitXY"
				       	android:contentDescription="@string/lbl_textoiniciosesion"/>
			    
			    <!-- Información del Evento -->
			    
			    <TextView
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
					android:gravity="center_horizontal"
					android:layout_marginRight="0dp"
					android:layout_centerVertical="true"
			        android:textColor="#ffffff"
			        android:textSize="14sp"
			        android:layout_marginTop="2dp"
			        android:textStyle="bold"
			        android:text="@string/txtInfoOferta"
			        android:singleLine="true"
			   		android:ellipsize="end" />
			    
			    </RelativeLayout>
			    <RelativeLayout
			        android:id="@+id/rlyInfoEventoContenidoDesplegable"
			        android:layout_below="@+id/rlyInfoEvento"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="2sp" 
			        android:layout_marginLeft="45dp"
			        android:padding="5sp" 
			        android:layout_marginRight="10sp">
			        
			    	<TextView
			    	    android:id="@+id/lblObservaciones"
			    	    android:layout_width="match_parent"
			   	  		android:layout_height="wrap_content"
			   	  		android:textColor="#0093d8"
			   	  		android:textSize="12sp"
			   	  		android:layout_gravity="center_vertical|right"
			   	  		android:text="@string/lblObservaciones" />
			    	
			    	<EditText 
			    	    android:id="@+id/txtObservaciones"
			    	    android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:textSize="12sp"
				        android:textColor="#000000" 
				        android:background="#ffffff"
				        android:padding="5dp"
				        android:layout_marginTop="0dp"
				        android:layout_below="@+id/lblObservaciones"
				        android:inputType="textMultiLine"
				        android:lines="6"
				        android:minLines="4"
				        android:maxLines="8"
				        android:layout_marginRight="10sp"
				        android:scrollbars="vertical" />
			    	
			    	<TextView
			    	    android:id="@+id/lblConvocados"
			    	    android:layout_width="match_parent"
			   	  		android:layout_height="wrap_content"
			   	  		android:textColor="#0093d8"
			   	  		android:textSize="12sp"
			   	  		android:layout_marginTop="10sp"
			   	  		android:layout_gravity="center_vertical|right"
			   	  		android:layout_below="@+id/txtObservaciones"
			   	  		android:text="@string/lblConvocados" />
			    	
			    	<EditText
			    	    android:id="@+id/txtConvocados" 
			    	    android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:textSize="12sp"
				        android:textColor="#000000" 
				        android:background="@drawable/textlines"
				        android:hint="@string/lblConvocadosHint"
				        android:padding="5dp"
				        android:layout_marginTop="0dp"
				        android:layout_below="@+id/lblConvocados"
				        android:maxLength="3"
				        android:inputType="number" 
				        android:layout_marginRight="10sp" />
			    	
			    	<TextView
			    	    android:id="@+id/lblAsistenes"
			    	    android:layout_width="match_parent"
			   	  		android:layout_height="wrap_content"
			   	  		android:textColor="#0093d8"
			   	  		android:textSize="12sp"
			   	  		android:layout_marginTop="10sp"
			   	  		android:layout_gravity="center_vertical|right"
			   	  		android:layout_below="@+id/txtConvocados"
			   	  		android:text="@string/lblAsistenes" />
			    	
			    	<EditText 
			    	    android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:textSize="12sp"
				        android:textColor="#000000" 
				        android:background="@drawable/textlines"
				        android:hint="@string/lblAsistenesHint"
				        android:padding="5dp"
				        android:layout_marginTop="0dp"
				        android:layout_below="@+id/lblAsistenes"
				        android:maxLength="3"
				        android:inputType="number" 
				        android:layout_marginRight="10sp" />
			    	
			    </RelativeLayout>
			    
			    <RelativeLayout
			        android:id="@+id/rlyCalificaExperiencia"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/rlyInfoEventoContenidoDesplegable"
			        android:layout_marginTop="10dp"
			        android:clickable="true"
			        android:onClick="MostrarOcultar"
			        android:tag="rlyCalificaExperiencia" >
	
			         <ImageView
			            android:id="@+id/imgCalificaExperiencia"
				        android:layout_gravity="top"
				       	android:layout_height="25sp"
				       	android:layout_width="fill_parent"
				       	android:adjustViewBounds="false"
				       	android:layout_marginLeft="40dp"
				       	android:layout_alignWithParentIfMissing="true"
				       	android:scaleType="fitXY"
				       	android:contentDescription="@string/lbl_textoiniciosesion" />
			    
			    <!-- Califica tu Experiencia -->
			    
			    <TextView
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
					android:gravity="center_horizontal"
					android:layout_marginRight="0dp"
					android:layout_centerVertical="true"
			        android:textColor="#ffffff"
			        android:textSize="14sp"
			        android:layout_marginTop="2dp"
			        android:textStyle="bold"
			        android:text="@string/txtCalificaExperiencia"
			        android:singleLine="true"
			   		android:ellipsize="end" />
			    
			    </RelativeLayout>
			    
			    <RelativeLayout
			        android:id="@+id/rlyCalificaExperienciaContenidoDesplegable"
			        android:layout_below="@+id/rlyCalificaExperiencia"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="2sp" 
			        android:layout_marginLeft="45dp"
			        android:padding="5sp" >
			        
			            <ListView
	        				android:id="@+id/list"
	        				android:layout_height="280sp"
	        				android:layout_width="match_parent"
	        				android:divider="@null"
							android:dividerHeight="0dp">
	    				</ListView>    
		        </RelativeLayout>
			    
			    <RelativeLayout
			        android:id="@+id/rlyAgregarFotos"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/rlyCalificaExperienciaContenidoDesplegable"
			        android:layout_marginTop="10dp" android:clickable="true"
			        android:onClick="MostrarOcultar"
			        android:tag="rlyAgregarFotos"
			        android:visibility="gone" >
	
			        <ImageView
			            android:id="@+id/imgAgregarFotos"
				        android:layout_gravity="top"
				       	android:layout_height="25sp"
				       	android:layout_width="fill_parent"
				       	android:adjustViewBounds="false"
				       	android:layout_marginLeft="40dp"
				       	android:layout_alignWithParentIfMissing="true"
				       	android:scaleType="fitXY"
				       	android:contentDescription="@string/lbl_textoiniciosesion" />
			    
			    <!-- Agregar fotos -->
			    
			    <ImageView
		            android:id="@+id/imgCamara"
			        android:layout_gravity="top"
			       	android:layout_height="wrap_content"
			       	android:layout_width="wrap_content"
			       	android:adjustViewBounds="false"
			       	android:layout_marginRight="40dp"
			       	android:layout_alignWithParentIfMissing="true"
			       	android:scaleType="fitXY"
			       	android:src="@drawable/camera"
			       	android:layout_alignParentRight="true"
			       	android:contentDescription="@string/lbl_textoiniciosesion" />
			    
			    <TextView
			        android:id="@+id/txtAgregarFotos"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
					android:gravity="center_horizontal"
					android:layout_marginRight="0dp"
					android:layout_centerVertical="true"
			        android:textColor="#ffffff"
			        android:textSize="14sp"
			        android:layout_marginTop="2dp"
			        android:textStyle="bold"
			        android:text="@string/txtAgregarFotos"
			        android:singleLine="true"
			   		android:ellipsize="end" />
			    
			    </RelativeLayout>
			    
			    <RelativeLayout
			        android:id="@+id/rlyAgregarFotosContenidoDesplegable"
			        android:layout_below="@+id/rlyAgregarFotos"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="2sp" 
			        android:layout_marginLeft="45dp"
			        android:paddingTop="5sp"
			        android:paddingRight="0sp"
			        android:paddingLeft="5sp"
			        android:paddingBottom="5sp"
			        android:gravity="right" >
			        
			    	<ImageView
			            android:id="@+id/imgFoto1"
				        android:layout_gravity="top"
				       	android:layout_height="wrap_content"
				       	android:layout_width="wrap_content"
				       	android:adjustViewBounds="false"
				       	android:scaleType="fitXY"
				       	android:src="@drawable/attached_image_false"
				       	android:layout_marginRight="10sp"
				       	android:contentDescription="@string/lbl_textoiniciosesion" />
			    	
			    	<ImageView
			            android:id="@+id/imgFoto2"
				        android:layout_gravity="top"
				       	android:layout_height="wrap_content"
				       	android:layout_width="wrap_content"
				       	android:adjustViewBounds="false"
				       	android:scaleType="fitXY"
				       	android:src="@drawable/attached_image_false"
				       	android:layout_marginRight="10sp"
				       	android:contentDescription="@string/lbl_textoiniciosesion" 
				       	android:layout_toRightOf="@+id/imgFoto1"/>
			    	
			    	<ImageView
			            android:id="@+id/imgFoto3"
				        android:layout_gravity="top"
				       	android:layout_height="wrap_content"
				       	android:layout_width="wrap_content"
				       	android:adjustViewBounds="false"
				       	android:layout_marginRight="0dp"
				       	android:scaleType="fitXY"
				       	android:src="@drawable/attached_image_false"
				       	android:contentDescription="@string/lbl_textoiniciosesion"
				       	android:layout_toRightOf="@+id/imgFoto2" />
			    	<TextView
		   		        android:id="@+id/txtInfoImagenes"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
				        android:textSize="12sp"
				        android:gravity="right"
				        android:layout_marginRight="10dp"
				        android:textColor="#ffffff"
				        android:text="@string/txtInfoImagenes"
				        android:singleLine="true"
				        android:layout_below="@+id/imgFoto2"
				   		android:ellipsize="end" />
			    	
			    </RelativeLayout>
			    
